<%- model_class = Course -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<div id="alert-area"></div>

<table class="table table-striped" id="courses-list">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:desc) %></th>
      <th>Closest start</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr id="<%= dom_id(course) %>">
        <td><%= link_to course.id, course_path(course) %></td>
        <td><%= course.name %></td>
        <td><%= course.desc %></td>
        <td><%= course.date %></td>
        <td>
          <%= link_to course_track_it_path(course), class: 'btn btn-mini track-it', remote: true, method: :post  do %>
            <i class="icon-eye-open"></i> Trak it</a>
          <% end%>
<!--           <%= link_to 'Edit', edit_course_path(course), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', course_path(course),
                      :method => :delete,
                      :data => { :confirm => 'Are you sure?' },
                      :class => 'btn btn-mini btn-danger' %> -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_course_path, :class => 'btn btn-primary' %>
